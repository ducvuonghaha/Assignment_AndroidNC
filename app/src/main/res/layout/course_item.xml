<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#DAF1FF"
    android:layout_marginBottom="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imvIconCourse"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/courseicon2" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameCourse"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0E66AC"
            android:text="Khóa học kỹ năng mềm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvContent"
            android:textSize="15dp"
            android:text="Khóa học giúp bạn có thêm nhiều kinh nghiệm  cuộc sống"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:layout_marginLeft="8dp"
        android:id="@+id/imvRegist"
        android:layout_gravity="center"
        android:src="@drawable/registericon"
        android:layout_width="30dp"
        android:layout_height="30dp"></ImageView>

</LinearLayout>