<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="#DAF1FF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/courseicon2" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameRegisted"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0E66AC"
            android:text="Khóa học kỹ năng mềm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvContentRegisted"
            android:textSize="15dp"
            android:text="Khóa học giúp bạn có thêm nhiều kinh nghiệm trong cuộc sống"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageView
        android:id="@+id/deleteRegisted"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_width="35dp"
        android:layout_height="35dp"></ImageView>

</LinearLayout>